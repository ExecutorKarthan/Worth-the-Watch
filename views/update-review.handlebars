<section class="container col-8 mt-4">
    <!--This creates a form for the user to update their review. The only part the user has access to edit is the "Your review" text area.-->
    <h2>Create a Review</h2>
    <form class="form review-form" form_id="edit-review-form">
        <div class="form-group m-3">
            <label for="title-create" style="font-weight: bold;">Movie Title</label>
            <p class="form-control-plaintext large-text black-text text-wrap" id="title-create" movie_id="{{review.movie.id}}">{{review.title}}</p>
        </div>
        <div class="form-group m-3">
            <label for="overview" style="font-weight: bold;">Overview</label>
            <p class="form-control-plaintext large-text black-text text-wrap" id="overview" poster_path="{{review.movie.poster_path}}">{{review.movie.overview}}</p>
        </div>
        <div class="form-group m-3">
            <label for="release-date" style="font-weight: bold;">Release Date</label>
            <p class="form-control-plaintext large-text black-text text-wrap" id="release-date">{{review.movie.release_date}}</p>
        </div>
        <div class="form-group m-3">
            <label for="review-create" style="font-weight: bold;" id="id_label" review_id="{{review.id}}">Your review</label>
            <textarea class="form-control half-width text-wrap" id="review-create" rows="4" value="{{review.body}}">{{review.body}}</textarea>
        </div>
        <div class="form-group m-2">
            <button class="btn btn-dark" type="submit" id="edit-review-btn">Submit</button>
        </div>
    </form>
</section>

<script src="/js/reviews.js"></script>