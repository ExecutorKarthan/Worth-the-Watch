<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <!--This creates a form for the user to enter their username and password. When they click the submit button, it signs them up and logs them in.-->
            <h2 class="mb-4">Sign Up</h2>
            <form class="signup-form">
                <div class="mb-3">
                    <label for="username-signup" class="form-label">Username:</label>
                    <input type="text" class="form-control" id="username-signup" placeholder="Create a username">
                </div>
                <div class="mb-3">
                    <label for="password-signup" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="password-signup" placeholder="Create a password">
                </div>
                <button type="submit" class="btn btn-dark" id="signup">Submit</button>
            </form>
            <!--This redirects the user to a login form.-->
            <a href="/login" class="mt-3 d-block">Already have an account? Click here to return to login</a>
        </div>
    </div>
</div>

<script src="./js/signup.js"></script>