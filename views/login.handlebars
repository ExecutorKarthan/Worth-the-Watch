<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <!--This creates a form for the user to enter their username and password. When they click the submit button, it logs them in.-->
            <h2 class="mb-4">Log In</h2>
            <form class="form login-form">
                <div class="mb-3">
                    <label for="username-login" class="form-label">Username:</label>
                    <input type="text" class="form-control" id="username-login" placeholder="Enter your username">
                </div>
                <div class="mb-3">
                    <label for="password-login" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="password-login" placeholder="Enter your password">
                </div>
                <button type="submit" class="btn btn-dark" id="login">Submit</button>
            </form>
            <!--This redirects the user to a signup form.-->
            <a href="/signup" class="mt-3 d-block">Click here to sign up!</a>
        </div>
    </div>
</div>

<script src="./js/login.js"></script>