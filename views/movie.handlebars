<section class="container">
  <div class = "row">
    <div class="col-md">
      <!--This creates a section for each movie in the list, with a button to review the movie and information about the movie.-->
      <button type="button" class="btn btn-dark" id="review-btn" movie_id="{{id}}">Review this film</button>
    </div>
    <div class="col-md">
      <img src='{{poster_path}}'>
    </div>
    <div class="col-md">
        <p>{{title}}</p>
        <p>{{overview}}</p>
        <p>{{release_date}}</p>
    </div>